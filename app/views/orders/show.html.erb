<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <p>Order total: <%= humanized_money_with_symbol @order.total_cents / 100.0 %></p>
    <p>Your order confirmation has been sent to <%= @order.email %></p>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>Prod ID</tr>
      <tr>Qty</tr>
      <tr>Total</tr>
    </thead>
    <tbody>
      <%= @line_items.each do |item| %>
      <tr>
        <td><%= item.product_id %></td>
        <td><%= item.quantity %></td>
        <td><%= humanized_money_with_symbol item.total_price_cents / 100.0 %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
